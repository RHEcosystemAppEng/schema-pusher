# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[**.java]
indent_size = 2
max_line_length = 100

[**.xml]
indent_size = 2
max_line_length = 120

[**.{yaml,yml}]
indent_size = 2
max_line_length = 100

[**.md]
max_line_length = 120
trim_trailing_whitespace = false

[**.{json,avsc,avro}]
indent_size = 2

[Makefile*]
indent_style = tab

[Dockerfile*]
indent_size = 4

[**.sh]
indent_size = 2
